# Development Dockerfile for Bun API
# Layers ordered for optimal caching

FROM oven/bun:latest

# ---- CACHED: System dependencies (rarely changes) ----
RUN apt-get update && apt-get install -y \
    bash git curl ca-certificates gnupg sudo vim jq \
    nodejs npm gosu \
    && rm -rf /var/lib/apt/lists/*

# ---- CACHED: GitHub CLI (rarely changes) ----
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | \
    dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg && \
    chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | \
    tee /etc/apt/sources.list.d/github-cli.list > /dev/null && \
    apt-get update && apt-get install -y gh && rm -rf /var/lib/apt/lists/*

# ---- CACHED: Create app user (no sudo for security) ----
RUN useradd -m -s /bin/bash agent

# ---- CACHED: App setup ----
WORKDIR /app
RUN mkdir -p /app/workspaces /app/ssh-keys /app/config && \
    chown -R agent:agent /app

# ---- CACHED: Dependencies (only rebuilds if package.json changes) ----
COPY package.json ./
COPY packages/api/package.json ./packages/api/
COPY packages/ui/package.json ./packages/ui/

RUN bun install && cd packages/api && bun install

# ---- Runtime config ----
ENV NODE_ENV=development
ENV PATH="/home/agent/.local/bin:/usr/local/bin:${PATH}"

EXPOSE 5100

# ---- Install Claude CLI as agent user ----
USER agent
RUN curl -fsSL https://claude.ai/install.sh | bash || \
    npm install -g @anthropic-ai/claude-code || \
    echo "Claude CLI installation skipped"

# ---- Git config for agent user ----
RUN git config --global user.email "agent@remote-agent.local" && \
    git config --global user.name "Remote Agent" && \
    git config --global init.defaultBranch main

# Switch back to root for entrypoint (drops to agent after fixing volume permissions)
USER root

COPY docker/entrypoint.dev.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["bun", "run", "--watch", "--cwd", "packages/api", "src/index.ts"]
